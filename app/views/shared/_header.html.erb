<div class="navbar bg-cover bg-center bg-[url('whitebook01.png')] h-16">
  <div class="flex-1">
    <%= link_to t('defaults.title'), root_path, class: 'btn btn-ghost text-xl' %>
  </div>
  <div class="flex-none gap-2">
    <div class="dropdown dropdown-end">
      <div tabindex="0" role="button" class="btn btn-ghost avatar">
        <i class="fa-solid fa-bars fa-2x"></i>
      </div>
      <ul tabindex="0" class="absolute z-50 mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">
        <% if current_user %>
          <li><%= link_to t('bookmarks.new.title'), new_bookmark_path %></li>
          <li><%= button_to t('defaults.logout'), :logout, method: :delete %></li>
        <% else %>
          <li><%= link_to t('defaults.register'), new_user_path %></li>
          <li><%= link_to t('defaults.login'), :login %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
