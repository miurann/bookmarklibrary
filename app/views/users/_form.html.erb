<%= form_with(model: user) do |form| %>
  <%= render 'shared/error_messages', object: form.object %>

    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: 'input input-bordered input-sm w-full max-w-xs my-3' %>

    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class: 'input input-bordered input-sm w-full max-w-xs my-3' %>

    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password, class: 'input input-bordered input-sm w-full max-w-xs my-3' %>

    <%= form.label :password_confirmation, style: "display: block" %>
    <%= form.password_field :password_confirmation, class: 'input input-bordered input-sm w-full max-w-xs my-3' %>
    <div>
      <%= form.submit t('defaults.register'), class:'btn btn-primary' %>
    </div>
<% end %>
